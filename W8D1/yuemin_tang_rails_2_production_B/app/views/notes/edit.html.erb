<h1>Edit Note Form</h1>

<form action="<%=note_url(@note)%>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
    <input type="hidden" name="_method" value="PATCH">

    <label>Title
        <input type="text" name="note[title]" value="<%=@note.title%>">
    </label>

    <label>Description
        <input type="text" name="note[description]" value="<%=@note.description%>">
    </label>

    <label>Secret</label>
    <label>True
        <input type="radio" name="note[secret]" value="true">
    </label><label>False
        <input type="radio" name="note[secret]" value="false">
    </label>

    <input type="submit" value="Save Edited Note">

</form>