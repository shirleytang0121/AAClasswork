<% if action == :new %>
        <% action_url= bands_url %>
    <% else %>
        <% action_url= band_url(@band) %>
<% end %>



<form action="<%=action_url%>" method="POST" >
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
<% end %>
    <label for="band_name">Name: </label>
    <input type="text" name="band[name]" id="band_name" value="<%=@band.name%>">
    <br>
    <input type="submit" value="<%= action == :new ? "create" : "update" %>">
</form>